<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="OFF">
    <Properties>
        <property name="log_pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36}(%L)[%M] - %msg%xEx%n</property>
        <property name="file_name">logs/stock.log</property>
        <property name="rolling_file_name">logs/$${date:yyyy-MM}/stock-%d{yyyy-MM-dd}-%i.log.gz</property>
        <property name="every_file_size">32M</property>
        <property name="output_log_level">WARN</property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <ThresholdFilter level="${output_log_level}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${log_pattern}" />
        </Console>
        <File name="LogFile" fileName="logs/temp_stock.log" append="false">
            <ThresholdFilter level="${output_log_level}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${log_pattern}"/>
        </File>
        <RollingFile name="RollingFile" fileName="${file_name}" filePattern="${rolling_file_name}">
            <ThresholdFilter level="${output_log_level}" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${log_pattern}" />
            <Policies>
                <SizeBasedTriggeringPolicy size="${every_file_size}" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="com.simpletour.biz.inventory.imp" level="${output_log_level}" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="LogFile" />
            <AppenderRef ref="RollingFile"/>
        </Logger>
        <Root level="${output_log_level}">
            <AppenderRef ref="Console" />
            <AppenderRef ref="LogFile" />
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>